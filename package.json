{
  "name": "vscode-mcp-server",
  "icon": "media/logo.png",
  "displayName": "vscode-mcp-server",
  "description": "VS Code as a MCP server",
  "version": "0.0.4",
  "repository": "https://github.com/juehang/vscode-mcp-server",
  "publisher": "JuehangQin",
  "license": "MIT",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "MCP Server",
      "properties": {
        "vscode-mcp-server.port": {
          "type": "number",
          "default": 3000,
          "minimum": 1024,
          "maximum": 65535,
          "description": "The port number for the MCP server"
        },
        "vscode-mcp-server.defaultEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Whether the MCP server should be enabled by default on VS Code startup"
        }
      }
    },
    "commands": [
      {
        "command": "vscode-mcp-server.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vscode-mcp-server.showServerInfo",
        "title": "Show MCP Server Information"
      },
      {
        "command": "vscode-mcp-server.toggleServer",
        "title": "Toggle MCP Server"
      },
      {
        "command": "vscode-mcp-server.toggleDiffAutoApproval",
        "title": "Toggle Apply Diff Auto-Approval Mode"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:shell": "npx @vscode/test-cli --run out/test/shell-tools/output-limiting.test.js --run out/test/shell-tools/output-limiting-verification.test.js --run out/test/shell-tools/shell-registry.test.js --run out/test/shell-tools/interactive-detection.test.js --run out/test/shell-tools/safety-warnings.test.js",
    "build": "echo 'ðŸ”¨ Building package...' && npx vsce package && echo 'âœ… Package built successfully!'",
    "install-extension": "echo 'ðŸ“¦ Installing VSCode Extension...' && code --install-extension vscode-mcp-server-0.0.4.vsix --force && echo 'âœ… Extension installed successfully!'",
    "reload-extensions": "echo 'ðŸ”„ Reloading VSCode Extensions...' && code -r . && echo 'âœ… VSCode Extensions reloaded successfully!'",
    "rebuild-and-reload": "echo 'ðŸ”¨ Building package...' && npx vsce package && echo 'âœ… Package built successfully!' && echo 'ðŸ“¦ Installing VSCode Extension...' && code --install-extension vscode-mcp-server-0.0.4.vsix --force && echo 'âœ… Extension installed successfully!' && echo 'ðŸ”„ Reloading VSCode Extensions...' && code -r . && echo 'âœ… VSCode Extensions reloaded successfully!'"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.13",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.3.2",
    "eslint": "^9.23.0",
    "proxyquire": "^2.1.3",
    "sinon": "^16.1.1",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@modelcontextprotocol/inspector": "github:modelcontextprotocol/inspector",
    "@modelcontextprotocol/sdk": "^1.10.1",
    "@types/diff": "^7.0.2",
    "@types/express": "^4.17.21",
    "diff": "^8.0.2",
    "dotenv": "^17.2.3",
    "express": "^4.18.3",
    "fastest-levenshtein": "^1.0.16",
    "string-similarity": "^4.0.4",
    "zod": "^3.22.4"
  }
}
